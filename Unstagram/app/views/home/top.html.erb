<% if !user_signed_in? %>
<div class = "top-wrapper">
	<div class = "top-wrapper-content">
		<h1>Unstagram</h1>
		<p>写真を投稿して思い出を共有しませんか？</p>
		<%= link_to "新規登録",new_user_registration_path,class:"btn sign-up-btn" %>
	</div>
</div>
<% else %>
	<h1 id = "top">みんなの投稿一覧</h1>
	<div class = "list">
	<% @notes.each do |note| %>
	<ul>
		<%= image_tag 'default_image.jpg',class:"top_profile_image" %>
		<%= link_to note.user.name,user_path(note.user.id),class:"top_profile_name" %></br>
		<%= image_tag "/user_images/#{note.image}",class:"listed-image" %></br>
		<p class = "note-title"><%= note.title %></p>
	</ul>
	<% end %>
	</div>
<% end %>
