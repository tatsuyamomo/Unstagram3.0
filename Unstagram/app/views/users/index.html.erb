<h1>ユーザ一覧</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag 'default_image.jpg',class:"profile_image" %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'プロフィール', user %></td>
        <!--<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
